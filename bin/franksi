#!/usr/bin/env ruby
require_relative '../lib/franksi'

case ARGV[0]
when "new"
  name = ARGV[1]
  if name
    Franksi::Project.new(name).create
    STDOUT.puts "-- Project #{name} created"
  else
    puts "-- Command 'new' requires a value"
  end
else
  STDOUT.puts <<-EOF
  Please provide command name
  
  Usage:
    franksi new project-name
  EOF
end